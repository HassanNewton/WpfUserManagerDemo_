<Window
    x:Class="WpfUserManagerDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Main"
    Width="400"
    Height="250">
    <StackPanel Margin="20">
        <TextBlock FontWeight="Bold" Text="Inloggad anvÃ¤ndare:" />
        <TextBlock Text="{Binding Source={StaticResource UserManager}, Path=CurrentUser.DisplayName, TargetNullValue='Ingen'}" />

        <TextBlock
            Margin="0,10,0,0"
            FontWeight="Bold"
            Text="Status:" />
        <TextBlock Text="{Binding Source={StaticResource UserManager}, Path=IsAuthenticated}" />

        <TextBlock
            Margin="0,10,0,0"
            FontWeight="Bold"
            Text="Roll:" />
        <TextBlock Text="{Binding Source={StaticResource UserManager}, Path=CurrentUser.Role, TargetNullValue='Ingen'}" />

        <Button
            Margin="0,20,0,0"
            Click="Logout_Click"
            Content="Logga ut"
            IsEnabled="{Binding Source={StaticResource UserManager}, Path=IsAuthenticated}" />
        
    </StackPanel>
</Window>